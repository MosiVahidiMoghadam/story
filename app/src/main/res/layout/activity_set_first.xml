<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backSetAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".setting.setAll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="size:"
            android:textColor="@color/colorText"
            android:textSize="35dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rasize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:checkedButton="@id/rabi"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rabi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="3.5"
                    android:text="big"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="3"
                    android:text="normal"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rasm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="3.5"
                    android:text="small"
                    android:textSize="15dp" />

            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="15dp"
            android:background="@color/colorText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="color:"
            android:textColor="@color/colorText"
            android:textSize="35dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/racolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:checkedButton="@id/rabro"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rabla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="3.5"
                    android:text="black"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rabro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="3"
                    android:text="brown"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/ragra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="3.5"
                    android:text="gray"
                    android:textSize="15dp" />

            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="15dp"
            android:background="@color/colorText" />

        <CheckBox
            android:id="@+id/chBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="2"
            android:text="Darck BackGround"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="15dp"
            android:background="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtaz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:text="موضوع"
                android:textColor="@color/colorText"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/txtMat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:text="متن"
                android:textColor="@color/colorText"
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
